<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eVet.MobileApp.Views.RezervacijeMenu">
    <ContentPage.Content>
        <StackLayout  Padding="10">
            <Button FontSize="22" Grid.Row="1" Grid.ColumnSpan="2" BackgroundColor="DodgerBlue" HorizontalOptions="FillAndExpand" Clicked="DodajRezervacijuButtonClicked" Text="DODAJ NOVI TERMIN" FontAttributes="Bold"></Button>

            <Button FontSize="22" Grid.Row="2" Grid.ColumnSpan="2" BackgroundColor="Blue" HorizontalOptions="FillAndExpand" Clicked="ZahtjevaneRezervacijeButtonClicked" Text="ZAHTJEVANI TERMINI" FontAttributes="Bold"></Button>

            <Button FontSize="22" Grid.Row="3" Grid.ColumnSpan="2" BackgroundColor="LawnGreen" HorizontalOptions="FillAndExpand" Clicked="OdobreneRezervacijeButtonClicked" Text="ODOBRENI TERMINI" FontAttributes="Bold"></Button>

            <Button FontSize="22" Grid.Row="4" Grid.ColumnSpan="2" BackgroundColor="IndianRed" HorizontalOptions="FillAndExpand" Clicked="OdbijeneRezervacijeButtonClicked" Text="ODBIJENI TERMINI" FontAttributes="Bold"></Button>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>